{
  "env": {
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "sort-imports": "off"
  }
}
