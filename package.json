{
  "name": "microrealestate",
  "version": "1.0.0-alpha.1",
  "description": "The application which helps the landlords to manage their property rents.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perezjoseph/microrealestate-whatsapp.git"
  },
  "keywords": [
    "property management",
    "real-estate",
    "rents",
    "tenants",
    "landlord",
    "open-source",
    "whatsapp",
    "payment-notices"
  ],
  "author": "Joseph PÃ©rez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perezjoseph/microrealestate-whatsapp/issues"
  },
  "homepage": "https://github.com/perezjoseph/microrealestate-whatsapp#readme",
  "workspaces": [
    "cli",
    "services/*",
    "webapps/*",
    "types"
  ],
  "scripts": {
    "format": "yarn workspaces foreach run format",
    "lint": "yarn workspaces foreach -pv run lint",
    "dev": "cross-env MRE_VERSION=dev node cli/src/index.js dev",
    "mre": "cross-env MRE_VERSION=local node cli/src/index.js",
    "prebuild": "node webapps/landlord/scripts/generate-version.js && node webapps/tenant/scripts/generate-version.js",
    "build": "yarn run mre build",
    "start": "yarn run mre start",
    "stop": "yarn run mre stop",
    "ci": "yarn run mre ci",
    "prepare": "husky install",
    "migrate:whatsapp": "node migration-whatsapp-config.js",
    "migrate:whatsapp:dry-run": "node migration-whatsapp-config.js --dry-run",
    "migrate:whatsapp:rollback": "node migration-whatsapp-config.js --rollback",
    "migrate:whatsapp:rollback:dry-run": "node migration-whatsapp-config.js --rollback --dry-run",
    "health:check": "curl -f http://localhost:8080/health && curl -f http://localhost:8200/health && curl -f http://localhost:8500/health",
    "version:check": "echo 'Mongoose versions:' && grep -r '\"mongoose\"' services/*/package.json package.json"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.2"
  },
  "resolutions": {
    "axios": "1.8.4",
    "braces": "3.0.3",
    "cross-spawn": "7.0.5",
    "esbuild": "0.25.0",
    "nanoid": "3.3.8",
    "path-to-regexp": "0.1.12",
    "tar-fs": "3.0.9",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=22.17.1"
  },
  "packageManager": "yarn@3.3.0",
  "dependencies": {
    "@babel/core": "latest",
    "dotenv": "^17.2.1",
    "form-data": "latest",
    "mongodb": "^6.18.0",
    "mongoose": "^8.8.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5"
  }
}
